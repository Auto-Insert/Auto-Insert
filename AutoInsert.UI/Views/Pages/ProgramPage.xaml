<Page x:Class="AutoInsert.UI.Pages.ProgramPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AutoInsert.UI"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:AutoInsert.UI.Converters"
      Title="Program Configuration"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </Page.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Column: Program Configuration -->
        <ScrollViewer Grid.Column="0" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock FontSize="32" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">Program Configuration</TextBlock>
                
                <!-- Configuration Form -->
                <ui:Card Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,10">File loaded:</TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Text="{Binding LoadedFileName}" 
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding LoadedProgramPath}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0">Number of Parts:</TextBlock>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  FontSize="14"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  ItemsSource="{Binding AvailableBlockCounts}"
                                  SelectedItem="{Binding SelectedBlockCount}"/>
                    </Grid>
                </ui:Card>
                
                <!-- Error Message -->
                <ui:InfoBar 
                    IsOpen="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                    Severity="Error"
                    Title="Error"
                    Message="{Binding ErrorMessage}"
                    IsClosable="False"
                    Margin="0,0,0,15"/>
                
                <!-- Loaded Configuration Table -->
                <ui:Card Visibility="{Binding ProgramLoaded, Converter={StaticResource BoolToVis}}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15">Loaded Configuration</TextBlock>
                        
                        <ui:DataGrid ItemsSource="{Binding Program}" 
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     CanUserResizeRows="False"
                                     CanUserReorderColumns="False"
                                     SelectionMode="Single"
                                     GridLinesVisibility="Horizontal"
                                     HeadersVisibility="Column"
                                     HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Auto">
                            <ui:DataGrid.Columns>
                                <DataGridTextColumn Header="Plug Type" Binding="{Binding PlugType}" Width="*"/>
                                <DataGridTextColumn Header="Position X" Binding="{Binding PositionX, StringFormat=N2}" Width="*"/>
                                <DataGridTextColumn Header="Position Y" Binding="{Binding PositionY, StringFormat=N2}" Width="*"/>
                                <DataGridTextColumn Header="Position Z" Binding="{Binding PositionZ, StringFormat=N2}" Width="*"/>
                                <DataGridTextColumn Header="Vector X" Binding="{Binding VectorX, StringFormat=N3}" Width="*"/>
                                <DataGridTextColumn Header="Vector Y" Binding="{Binding VectorY, StringFormat=N3}" Width="*"/>
                                <DataGridTextColumn Header="Vector Z" Binding="{Binding VectorZ, StringFormat=N3}" Width="*"/>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>
                    </DockPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Vertical Separator -->
        <Border Grid.Column="1" 
                Grid.Row="0"
                Grid.RowSpan="2"
                Background="{DynamicResource ControlStrokeColorDefaultBrush}" 
                Margin="10,0"/>

        <!-- Right Column: Required Materials -->
        <ScrollViewer Grid.Column="2" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10,0,0,0">
            <StackPanel>
                <TextBlock FontSize="32" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">Required Materials</TextBlock>
                
                <ui:Card Visibility="{Binding ProgramLoaded, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10">Plug Types Required:</TextBlock>
                        
                        <ItemsControl ItemsSource="{Binding RequiredPlugs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   FontSize="16"
                                                   Text="{Binding Key}"/>
                                        <ui:InfoBadge Grid.Column="1"
                                                  Value="{Binding Value}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <Separator Margin="0,15"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0">Estimated Time:</TextBlock>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"
                                       Text="{Binding EstimatedTime}"/>
                        </Grid>
                    </StackPanel>
                </ui:Card>
                
                <!-- Placeholder when no program loaded -->
                <ui:Card Visibility="{Binding ProgramLoaded, Converter={StaticResource InverseBoolToVis}}">
                    <StackPanel HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="Document24" FontSize="48" Margin="0,0,0,10"/>
                        <TextBlock FontSize="16" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center">No program loaded.</TextBlock>
                        <TextBlock FontSize="14" 
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0">Upload a program to see required materials.</TextBlock>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Column="2" 
                    Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="10,20,0,0">
            <ui:Button 
                Appearance="Secondary"
                Icon="{ui:SymbolIcon FolderOpen24}"
                Content="Upload Program"
                Click="UploadProgram" 
                Margin="0,0,10,0"/>
            <ui:Button 
                Appearance="Primary"
                Icon="{ui:SymbolIcon Play24}"
                Content="Start Program"
                Click="StartProgram"
                IsEnabled="{Binding ProgramLoaded}"/>
        </StackPanel>
    </Grid>
</Page>