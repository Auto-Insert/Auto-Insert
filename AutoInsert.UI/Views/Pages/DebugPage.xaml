<Page x:Class="AutoInsert.UI.Pages.DebugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:AutoInsert.UI.Pages"
      xmlns:vm="clr-namespace:AutoInsert.UI.ViewModels"
      xmlns:converters="clr-namespace:AutoInsert.UI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Debug"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Page.Resources>
        <converters:RadiansToDegreeConverter x:Key="RadiansToDegreeConverter"/>
        <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
    </Page.Resources>
        <StackPanel Margin="20">
            <!-- Connection Section -->
            <TextBlock Text="Connection" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                            <TextBlock Text="Robot Mode: " 
                                    FontWeight="Bold" 
                                    FontSize="16"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding RobotMode}" 
                                    FontSize="16"
                                    VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="0,5,0,10">
                            <TextBlock Text="Configuration:" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="IP Address: " 
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ConfiguredIpAddress}" 
                                           FontSize="12"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="Serial Port: " 
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ConfiguredSerialPort}" 
                                           FontSize="12"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="Baud Rate: " 
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ConfiguredBaudRate}" 
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="Configure IP address and serial port in Settings page" 
                                   FontSize="12"
                                   Foreground="Gray"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Content="Connect" 
                            Click="ReconnectButton_Click"
                            Width="100" 
                            Height="35"
                            FontSize="14"
                            VerticalAlignment="Bottom"
                            Margin="15,0,0,0"/>
                </Grid>
            </ui:Card>
            <!-- UR Robot Section -->
            <TextBlock Text="UR Robot" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            <!-- Control Section -->
            <TextBlock Text="Control" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Enable Freedrive" 
                                Click="EnableFreedriveButton_Click"
                                Width="150" 
                                Height="35"
                                Margin="0,0,10,0"
                                FontSize="14"/>
                        <Button Content="Disable Freedrive" 
                                Click="DisableFreedriveButton_Click"
                                Width="150" 
                                Height="35"
                                FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- Local Waypoints Section -->
            <TextBlock Text="Local Waypoints" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Section -->
                    <TextBlock Grid.Row="0"
                               Text="Add New Waypoint"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <!-- Name Input -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Name:" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding LocalWaypointName, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"
                                 MaxWidth="400"
                                 HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Coordinates Input -->
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- X Coordinate -->
                        <TextBlock Grid.Column="0"
                                   Text="X (mm):" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding LocalX, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"/>

                        <!-- Y Coordinate -->
                        <TextBlock Grid.Column="3"
                                   Text="Y (mm):" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Column="4"
                                 Text="{Binding LocalY, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"/>

                        <!-- Z Coordinate -->
                        <TextBlock Grid.Column="6"
                                   Text="Z (mm):" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Column="7"
                                 Text="{Binding LocalZ, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"/>

                        <!-- Add Button -->
                        <Button Grid.Column="9"
                                Content="Add Waypoint" 
                                Click="AddLocalWaypointButton_Click"
                                Width="130" 
                                Height="35"
                                FontSize="14"/>
                    </Grid>

                    <!-- Waypoint List -->
                    <Grid Grid.Row="3" Margin="0,10,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- ListBox with Waypoints -->
                        <Border Grid.Column="0"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ListBox ItemsSource="{Binding LocalWaypoints}"
                                     SelectedItem="{Binding SelectedLocalWaypoint}"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Padding="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center">
                                                <Run Text="X="/><Run Text="{Binding X, StringFormat='{}{0:F1}'}"/><Run Text="mm  "/><Run Text="Y="/><Run Text="{Binding Y, StringFormat='{}{0:F1}'}"/><Run Text="mm  "/><Run Text="Z="/><Run Text="{Binding Z, StringFormat='{}{0:F1}'}"/><Run Text="mm"/>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Control Buttons -->
                        <StackPanel Grid.Column="2"
                                    VerticalAlignment="Top"
                                    Margin="0,5,0,0">
                            <Button Content="Move To" 
                                    Click="MoveToLocalWaypointButton_Click"
                                    Width="100" 
                                    Height="35"
                                    Margin="0,0,0,10"
                                    FontSize="14"/>
                            <Button Content="Delete" 
                                    Click="DeleteLocalWaypointButton_Click"
                                    Width="100" 
                                    Height="35"
                                    FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Speed and Acceleration Controls + Status -->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Speed/Acceleration -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Speed:" 
                                      FontWeight="Bold" 
                                      FontSize="14"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox Text="{Binding MoveSpeed, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                     FontFamily="Consolas"
                                     FontSize="14"
                                     Padding="5,2"
                                     VerticalAlignment="Center"
                                     Margin="0,0,20,0"/>
                            <TextBlock Text="Acceleration:" 
                                      FontWeight="Bold" 
                                      FontSize="14"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox Text="{Binding MoveAcceleration, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                     FontFamily="Consolas"
                                     FontSize="14"
                                     Padding="5,2"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Status Message -->
                        <TextBlock Grid.Row="1"
                                   Text="{Binding LocalWaypointStatus}" 
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0,5,0,5"/>

                        <!-- Calibration Status -->
                        <TextBlock Grid.Row="2"
                                   Text="{Binding CalibrationStatusText}"
                                   FontSize="12"
                                   Foreground="Orange"
                                   Margin="0,5,0,0"/>
                    </Grid>
                </Grid>
            </ui:Card>

            <!-- Custom URScript Section -->
            <TextBlock Text="Custom URScript" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <StackPanel>
                    <TextBox Text="{Binding CustomScript, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,10,0,10"
                             Padding="5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Send Script" 
                                Click="SendScriptButton_Click"
                                Width="120" 
                                Height="35"
                                Margin="0,0,10,0"
                                FontSize="14"/>
                        <TextBlock Text="{Binding ScriptStatus}" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <TextBlock Text="Robot Status" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Joint Positions -->
                <ui:Card Grid.Column="0">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Joint 1 - Base -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                Text="Base:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition[0], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition[0], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 2 - Shoulder -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                Text="Shoulder:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition[1], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition[1], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 3 - Elbow -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                Text="Elbow:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition[2], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition[2], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 4 - Wrist 1 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                Text="Wrist 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition[3], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition[3], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 5 - Wrist 2 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                Text="Wrist 2:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition[4], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="4" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition[4], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 6 - Wrist 3 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                Text="Wrist 3:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="5" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition[5], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="5" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition[5], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>
                    </Grid>
                </ui:Card>

                <!-- Right Column: Tool Data -->
                <ui:Card Grid.Column="2">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Analog Input Range 0 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                Text="Analog Input Range 0:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInputRange0}"/>
                        </Border>

                        <!-- Analog Input Range 1 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                Text="Analog Input Range 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInputRange1}"/>
                        </Border>

                        <!-- Analog Input 0 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                Text="Analog Input 0:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInput0, StringFormat='{}{0:F4}'}"/>
                        </Border>

                        <!-- Analog Input 1 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                Text="Analog Input 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInput1, StringFormat='{}{0:F4}'}"/>
                        </Border>

                        <!-- Tool Voltage 48V -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                Text="Tool Voltage 48V:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolVoltage48V, StringFormat='{}{0:F2} V'}"/>
                        </Border>

                        <!-- Tool Output Voltage -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                Text="Tool Output Voltage:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="5" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolOutputVoltage}"/>
                        </Border>

                        <!-- Tool Current -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                Text="Tool Current:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="6" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolCurrent, StringFormat='{}{0:F2} A'}"/>
                        </Border>

                        <!-- Tool Temperature -->
                        <TextBlock Grid.Row="7" Grid.Column="0" 
                                Text="Tool Temperature:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="7" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolTemperature, StringFormat='{}{0:F1} °C'}"/>
                        </Border>

                        <!-- Tool Mode -->
                        <TextBlock Grid.Row="8" Grid.Column="0" 
                                Text="Tool Mode:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="8" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolMode}"/>
                        </Border>
                    </Grid>
                </ui:Card>
            </Grid>

            <!-- Separator -->
            <Separator Margin="0,20,0,20"/>

            <!-- UART Motors Section -->
            <TextBlock Text="Individual Control" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!-- UART Motors Section -->
            <TextBlock Text="UART Motors" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            
            <TextBlock Text="Configure serial port in Settings page" 
                       FontSize="12"
                       Foreground="Gray"
                       Margin="0,0,0,15"/>

            <!-- Servo Motor Control -->
            <TextBlock Text="Servo Motor" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Degrees (0-180):" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Width="120"/>
                        <TextBox Text="{Binding ServoDegrees, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <Button Content="Move Servo"
                                Click="MoveServoButton_Click"
                                Width="120" 
                                Height="35"
                                FontSize="14"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding ServoStatus}" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- Stepper Motor Control -->
            <TextBlock Text="Stepper Motor" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <StackPanel>
                    <Grid Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Motor Selection -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                  Text="Motor:" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,5"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                            <RadioButton Content="Rail (1)" 
                                        IsChecked="{Binding StepperMotorSelection, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                        GroupName="StepperMotor"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Center"/>
                            <RadioButton Content="Pump (2)" 
                                        IsChecked="{Binding StepperMotorSelection, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}"
                                        GroupName="StepperMotor"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Center"/>
                            <RadioButton Content="Tool (3)" 
                                        IsChecked="{Binding StepperMotorSelection, Converter={StaticResource IntToBoolConverter}, ConverterParameter=3}"
                                        GroupName="StepperMotor"
                                        VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Direction -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                  Text="Direction:" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,5"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                            <RadioButton Content="Anti-Clockwise" 
                                        IsChecked="{Binding StepperDirection, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                                        GroupName="StepperDirection"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Center"/>
                            <RadioButton Content="Clockwise" 
                                        IsChecked="{Binding StepperDirection, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                        GroupName="StepperDirection"
                                        VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Steps -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                  Text="Steps (0-30000):" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,5"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                Text="{Binding StepperSteps, UpdateSourceTrigger=PropertyChanged}"
                                 Width="150"
                                 HorizontalAlignment="Left"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 Margin="0,5"/>

                        <!-- Control Buttons -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Orientation="Horizontal" 
                                   Margin="0,10,0,5">
                            <Button Content="Move Stepper"
                                    Click="MoveStepperButton_Click"
                                    Width="120" 
                                    Height="35"
                                    FontSize="14"
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding StepperStatus}" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Foreground="#666"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Solenoid Actuator Control -->
            <TextBlock Text="Solenoid Actuator" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <StackPanel>
                    <Grid Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Actuator Number -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                  Text="Actuator:" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                Text="{Binding SolenoidActuatorNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"
                                 HorizontalAlignment="Left"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 Margin="0,5"/>

                        <!-- Movement -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                  Text="Movement:" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,5"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                            <RadioButton Content="Extend" 
                                        IsChecked="{Binding SolenoidMovement, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                                        GroupName="SolenoidMovement"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Center"/>
                            <RadioButton Content="Retract" 
                                        IsChecked="{Binding SolenoidMovement, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                        GroupName="SolenoidMovement"
                                        VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Control Buttons -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Orientation="Horizontal" 
                                   Margin="0,10,0,5">
                            <Button Content="Move Actuator"
                                    Click="MoveSolenoidButton_Click"
                                    Width="120" 
                                    Height="35"
                                    FontSize="14"
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding SolenoidStatus}" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Foreground="#666"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Separator -->
            <Separator Margin="0,20,0,20"/>

            <!-- Screwing Station Section -->
            <TextBlock Text="Screwing Station" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Linear Actuator" 
                FontSize="18" 
                FontWeight="Bold" 
                Margin="0,0,0,20"/>
            <ui:Card Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Extension (0-100%):" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <TextBox Text="{Binding ExtensionPercentage, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <Button Content="Set Position"
                                Click="SetScrewdriverExtensionButton_Click"
                                Width="120" 
                                Height="35"
                                FontSize="14"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding ExtensionStatus}" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
</Page>