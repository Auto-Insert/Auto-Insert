<Page x:Class="AutoInsert.UI.Pages.DebugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoInsert.UI.Pages"
      xmlns:vm="clr-namespace:AutoInsert.UI.ViewModels"
      xmlns:converters="clr-namespace:AutoInsert.UI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Debug">
    <Page.Resources>
        <converters:RadiansToDegreeConverter x:Key="RadiansToDegreeConverter"/>
    </Page.Resources>
    <Page.DataContext>
        <vm:DebugViewModel/>
    </Page.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                    Margin="20"
                    ScrollViewer.CanContentScroll="True">
        <StackPanel>
            <!-- UR Robot Section -->
            <TextBlock Text="UR Robot" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!-- Connection Section -->
            <GroupBox Header="Connection" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <TextBlock Text="IP Address: " 
                                FontWeight="Bold" 
                                FontSize="14"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                        <TextBox Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                Width="150"
                                FontFamily="Consolas"
                                FontSize="14"
                                Padding="5,2"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                        <Button Content="Reconnect" 
                                Click="ReconnectButton_Click"
                                Width="100" 
                                Height="30"
                                FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Robot Mode: " 
                                FontWeight="Bold" 
                                FontSize="16"/>
                        <TextBlock Text="{Binding RobotMode}" 
                                FontSize="16"
                                Foreground="Blue"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Control Section -->
            <GroupBox Header="Robot Control" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Enable Freedrive" 
                                Click="EnableFreedriveButton_Click"
                                Width="150" 
                                Height="35"
                                Margin="0,0,10,0"
                                FontSize="14"/>
                        <Button Content="Disable Freedrive" 
                                Click="DisableFreedriveButton_Click"
                                Width="150" 
                                Height="35"
                                FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Waypoint Section -->
            <GroupBox Header="Waypoint Testing" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Save Waypoint Row -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">
                        <Button Content="Save Current Position" 
                                Click="SaveWaypointButton_Click"
                                Width="180" 
                                Height="30"
                                FontSize="14"/>
                    </StackPanel>

                    <!-- Speed and Acceleration Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Speed:" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <TextBox Text="{Binding MoveSpeed, UpdateSourceTrigger=PropertyChanged}"
                                 Width="80"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        <TextBlock Text="Acceleration:" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <TextBox Text="{Binding MoveAcceleration, UpdateSourceTrigger=PropertyChanged}"
                                 Width="80"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Waypoint List Controls -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Move to Selected" 
                                Click="MoveToWaypointButton_Click"
                                Width="150" 
                                Height="30"
                                Margin="0,0,10,0"
                                FontSize="14"/>
                        <Button Content="Delete Selected" 
                                Click="DeleteWaypointButton_Click"
                                Width="150" 
                                Height="30"
                                FontSize="14"/>
                    </StackPanel>

                    <!-- Waypoint List -->
                    <Border Grid.Row="3" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Margin="0,0,0,10">
                        <ListBox ItemsSource="{Binding SavedWaypoints}"
                                 SelectedItem="{Binding SelectedWaypoint}"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="5">
                                        <StackPanel>
                                            <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#666">
                                                <Run Text="Base: "/><Run Text="{Binding JointPositions[0], StringFormat='{}{0:F4}'}"/>
                                                <Run Text="  Shoulder: "/><Run Text="{Binding JointPositions[1], StringFormat='{}{0:F4}'}"/>
                                                <Run Text="  Elbow: "/><Run Text="{Binding JointPositions[2], StringFormat='{}{0:F4}'}"/>
                                            </TextBlock>
                                            <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#666">
                                                <Run Text="Wrist 1: "/><Run Text="{Binding JointPositions[3], StringFormat='{}{0:F4}'}"/>
                                                <Run Text="  Wrist 2: "/><Run Text="{Binding JointPositions[4], StringFormat='{}{0:F4}'}"/>
                                                <Run Text="  Wrist 3: "/><Run Text="{Binding JointPositions[5], StringFormat='{}{0:F4}'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Custom URScript Section -->
            <GroupBox Header="Custom URScript" Margin="0,0,0,15">
                <StackPanel>
                    <TextBox Text="{Binding CustomScript, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,10,0,10"
                             Padding="5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Send Script" 
                                Click="SendScriptButton_Click"
                                Width="120" 
                                Height="35"
                                Margin="0,0,10,0"
                                FontSize="14"/>
                        <TextBlock Text="{Binding ScriptStatus}" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Joint Positions -->
                <GroupBox Grid.Column="0" Header="Current Joint Positions">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Joint 1 - Base -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                Text="Base:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[0], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[0], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 2 - Shoulder -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                Text="Shoulder:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[1], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[1], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 3 - Elbow -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                Text="Elbow:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[2], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[2], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 4 - Wrist 1 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                Text="Wrist 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[3], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[3], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 5 - Wrist 2 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                Text="Wrist 2:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[4], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="4" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[4], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 6 - Wrist 3 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                Text="Wrist 3:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="5" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[5], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="5" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[5], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <!-- Right Column: Tool Data -->
                <GroupBox Grid.Column="2" Header="Tool Data">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Analog Input Range 0 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                Text="Analog Input Range 0:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInputRange0}"/>
                        </Border>

                        <!-- Analog Input Range 1 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                Text="Analog Input Range 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInputRange1}"/>
                        </Border>

                        <!-- Analog Input 0 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                Text="Analog Input 0:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInput0, StringFormat='{}{0:F4}'}"/>
                        </Border>

                        <!-- Analog Input 1 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                Text="Analog Input 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInput1, StringFormat='{}{0:F4}'}"/>
                        </Border>

                        <!-- Tool Voltage 48V -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                Text="Tool Voltage 48V:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolVoltage48V, StringFormat='{}{0:F2} V'}"/>
                        </Border>

                        <!-- Tool Output Voltage -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                Text="Tool Output Voltage:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="5" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolOutputVoltage}"/>
                        </Border>

                        <!-- Tool Current -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                Text="Tool Current:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="6" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolCurrent, StringFormat='{}{0:F2} A'}"/>
                        </Border>

                        <!-- Tool Temperature -->
                        <TextBlock Grid.Row="7" Grid.Column="0" 
                                Text="Tool Temperature:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="7" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolTemperature, StringFormat='{}{0:F1} °C'}"/>
                        </Border>

                        <!-- Tool Mode -->
                        <TextBlock Grid.Row="8" Grid.Column="0" 
                                Text="Tool Mode:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="8" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolMode}"/>
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Separator -->
            <Separator Margin="0,20,0,20"/>

            <!-- Screwing Station Section -->
            <TextBlock Text="Screwing Station" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <GroupBox Header="Control" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Extension (0-100%):" 
                                  FontWeight="Bold"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <TextBox Text="{Binding ExtensionPercentage, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 Padding="5,2"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <Button Content="Set Position"
                                Click="SetScrewdriverExtensionButton_Click"
                                Width="120" 
                                Height="35"
                                FontSize="14"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding ExtensionStatus}" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Page>