<Page x:Class="AutoInsert.UI.Pages.DebugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoInsert.UI.Pages"
      xmlns:vm="clr-namespace:AutoInsert.UI.ViewModels"
      xmlns:converters="clr-namespace:AutoInsert.UI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Debug">
    <Page.Resources>
        <converters:RadiansToDegreeConverter x:Key="RadiansToDegreeConverter"/>
    </Page.Resources>
    <Page.DataContext>
        <vm:DebugViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="UR Robot" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <StackPanel>
                <!-- Connection Section -->
                <GroupBox Header="Connection" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Robot Mode: " 
                                      FontWeight="Bold" 
                                      FontSize="16"/>
                            <TextBlock Text="{Binding RobotMode}" 
                                      FontSize="16"
                                      Foreground="Blue"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Joint Positions -->
                <GroupBox Grid.Column="0" Header="Current Joint Positions" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Joint 1 - Base -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                Text="Base:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[0], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[0], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 2 - Shoulder -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                Text="Shoulder:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[1], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[1], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 3 - Elbow -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                Text="Elbow:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[2], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[2], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 4 - Wrist 1 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                Text="Wrist 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[3], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[3], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 5 - Wrist 2 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                Text="Wrist 2:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[4], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="4" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[4], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>

                        <!-- Joint 6 - Wrist 3 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                Text="Wrist 3:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="5" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12">
                                <Run Text="{Binding CurrentPosition.JointPositions[5], StringFormat='{}{0:F4} rad'}"/>
                            </TextBlock>
                        </Border>
                        <TextBlock Grid.Row="5" Grid.Column="2" 
                                FontFamily="Consolas" 
                                FontSize="12"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Foreground="#666">
                            <Run Text="("/><Run Text="{Binding CurrentPosition.JointPositions[5], Converter={StaticResource RadiansToDegreeConverter}, StringFormat='{}{0:F2}'}"/><Run Text="°)"/>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <!-- Right Column: Tool Data -->
                <GroupBox Grid.Column="2" Header="Tool Data" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Analog Input Range 0 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                Text="Analog Input Range 0:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInputRange0}"/>
                        </Border>

                        <!-- Analog Input Range 1 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                Text="Analog Input Range 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInputRange1}"/>
                        </Border>

                        <!-- Analog Input 0 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                Text="Analog Input 0:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInput0, StringFormat='{}{0:F4}'}"/>
                        </Border>

                        <!-- Analog Input 1 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                Text="Analog Input 1:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.AnalogInput1, StringFormat='{}{0:F4}'}"/>
                        </Border>

                        <!-- Tool Voltage 48V -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                Text="Tool Voltage 48V:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolVoltage48V, StringFormat='{}{0:F2} V'}"/>
                        </Border>

                        <!-- Tool Output Voltage -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                Text="Tool Output Voltage:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="5" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolOutputVoltage}"/>
                        </Border>

                        <!-- Tool Current -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                Text="Tool Current:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="6" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolCurrent, StringFormat='{}{0:F2} A'}"/>
                        </Border>

                        <!-- Tool Temperature -->
                        <TextBlock Grid.Row="7" Grid.Column="0" 
                                Text="Tool Temperature:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="7" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolTemperature, StringFormat='{}{0:F1} °C'}"/>
                        </Border>

                        <!-- Tool Mode -->
                        <TextBlock Grid.Row="8" Grid.Column="0" 
                                Text="Tool Mode:" 
                                FontWeight="Bold" 
                                Margin="0,5,10,5"
                                VerticalAlignment="Center"/>
                        <Border Grid.Row="8" Grid.Column="1" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,2">
                            <TextBlock FontFamily="Consolas" FontSize="12"
                                    Text="{Binding CurrentToolData.ToolMode}"/>
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>