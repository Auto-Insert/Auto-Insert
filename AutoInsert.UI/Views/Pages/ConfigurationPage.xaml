<Page x:Class="AutoInsert.UI.Pages.ConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AutoInsert.UI"
      xmlns:converters="clr-namespace:AutoInsert.UI.Converters"
      Title="Program Configuration">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </Page.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Column: Program Configuration -->
        <ScrollViewer Grid.Column="0" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock FontSize="32" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">Program Configuration</TextBlock>
                
                <!-- Configuration Form -->
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" 
                               FontSize="16" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,10">File loaded:</Label>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Text="{Binding LoadedFileName}" 
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding LoadedProgramPath}"
                                   Margin="0,0,0,10"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0">Number of Parts:</Label>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  Height="30"
                                  FontSize="14"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  ItemsSource="{Binding AvailableBlockCounts}"
                                  SelectedItem="{Binding SelectedBlockCount}"/>
                    </Grid>
                </Border>
                
                <!-- Error Message -->
                <Border BorderBrush="Red" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Background="#FFEEEE"
                        Padding="10"
                        Margin="0,0,0,20"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock FontSize="14" 
                               Foreground="Red" 
                               Text="{Binding ErrorMessage}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>
                
                <!-- Loaded Configuration Table -->
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="10"
                        Visibility="{Binding ProgramLoaded, Converter={StaticResource BoolToVis}}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15">Loaded Configuration</TextBlock>
                        
                        <StackPanel DockPanel.Dock="Top" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,10">
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding Program}" 
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  CanUserReorderColumns="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F5F5F5"
                                  RowHeight="28"
                                  MaxHeight="500"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Plug Type" Binding="{Binding PlugType}" Width="Auto" MinWidth="80"/>
                                <DataGridTextColumn Header="Position X" Binding="{Binding PositionX, StringFormat=N2}" Width="Auto" MinWidth="65"/>
                                <DataGridTextColumn Header="Position Y" Binding="{Binding PositionY, StringFormat=N2}" Width="Auto" MinWidth="65"/>
                                <DataGridTextColumn Header="Position Z" Binding="{Binding PositionZ, StringFormat=N2}" Width="Auto" MinWidth="65"/>
                                <DataGridTextColumn Header="Vector X" Binding="{Binding VectorX, StringFormat=N3}" Width="Auto" MinWidth="60"/>
                                <DataGridTextColumn Header="Vector Y" Binding="{Binding VectorY, StringFormat=N3}" Width="Auto" MinWidth="60"/>
                                <DataGridTextColumn Header="Vector Z" Binding="{Binding VectorZ, StringFormat=N3}" Width="Auto" MinWidth="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Vertical Separator -->
        <Border Grid.Column="1" 
                Grid.Row="0"
                Grid.RowSpan="2"
                Width="2" 
                Background="LightGray" 
                Margin="10,0"/>

        <!-- Right Column: Required Materials -->
        <ScrollViewer Grid.Column="2" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10,0,0,0">
            <StackPanel>
                <TextBlock FontSize="32" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">Required Materials</TextBlock>
                
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="15"
                        Visibility="{Binding ProgramLoaded, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10">Plug Types Required:</TextBlock>
                        
                        <ItemsControl ItemsSource="{Binding RequiredPlugs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   FontSize="16" 
                                                   Text="{Binding Key}"/>
                                        <TextBlock Grid.Column="1" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Text="{Binding Value}" 
                                                   Margin="10,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <Separator Margin="0,15"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0">Estimated Time:</Label>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"
                                       Text="{Binding EstimatedTime}"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Placeholder when no program loaded -->
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="15"
                        Visibility="{Binding ProgramLoaded, Converter={StaticResource InverseBoolToVis}}">
                    <TextBlock FontSize="16" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               TextAlignment="Center">No program loaded.<LineBreak/>Upload a program to see required materials.</TextBlock>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Column="2" 
                    Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="10,20,0,0">
            <Button Width="150" 
                    Height="40"
                    FontSize="16"
                    Click="UploadProgram" 
                    Margin="0,0,10,0">Upload Program</Button>
            
            <Button Width="150" 
                    Height="40"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="StartProgram"
                    IsEnabled="{Binding ProgramLoaded}">Start Program</Button>
        </StackPanel>
    </Grid>
</Page>